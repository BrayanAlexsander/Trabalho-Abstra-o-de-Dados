//AeroSales
import java.util.ArrayList;
import java.util.Scanner;

class Voo {
    private int numeroVoo;
    private int capacidadeMaxima;
    private ArrayList<Passageiro> passageiros;

    public Voo(int numeroVoo, int capacidadeMaxima) {
        this.numeroVoo = numeroVoo;
        this.capacidadeMaxima = capacidadeMaxima;
        this.passageiros = new ArrayList<>();
    }

    public int getNumeroVoo() {
        return numeroVoo;
    }

    public boolean adicionarPassageiro(Passageiro passageiro) {
        if (passageiros.size() < capacidadeMaxima) {
            passageiros.add(passageiro);
            return true;
        }
        return false;
    }

    public String toString() {
        return "Voo #" + numeroVoo + " - Passageiros: " + passageiros.size() + "/" + capacidadeMaxima;
    }
}

class Passageiro {
    private String nome;

    public Passageiro(String nome) {
        this.nome = nome;
    }

    public String getNome() {
        return nome;
    }
}

public class Aeroporto {
    public static void main(String[] args) {
        ArrayList<Voo> voos = new ArrayList<>();
        Scanner scanner = new Scanner(System.in);

        while (true) {
            System.out.println("1. Reservar Voo");
            System.out.println("2. Sair");
            System.out.print("Escolha uma opção: ");

            int escolha = scanner.nextInt();

            switch (escolha) {
                case 1:
                    System.out.print("Digite o número do voo: ");
                    int numeroVoo = scanner.nextInt();
                    Voo voo = new Voo(numeroVoo, 100); // Defina a capacidade máxima desejada
                    voos.add(voo);
                    System.out.println("Voo #" + numeroVoo + " reservado.");
                    break;
                case 2:
                    System.out.println("Saindo do sistema.");
                    System.exit(0);
                default:
                    System.out.println("Opção inválida. Tente novamente.");
            }
        }
    }
}
